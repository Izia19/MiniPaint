<Application x:Class="minipaint.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:minipaint"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
            </Style>
            <Style TargetType="ComboBoxItem">
                <Setter Property="Padding" Value="10 0 10 0"></Setter>
            </Style>
            <Style TargetType="ToolBar">
                <Setter Property="Background" Value="CornflowerBlue"></Setter>
            </Style>
            <Style TargetType="Canvas">
                <Setter Property="Background" Value="AliceBlue"></Setter>
            </Style>
            <Style x:Key="button_style" TargetType="Button">
                <Setter Property="Background" Value="DeepSkyBlue"></Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
